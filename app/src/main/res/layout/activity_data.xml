<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.radog.ti2_sensor.Data">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvRep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Flexo-ExtensiÃ³n de Codo:"
            android:textSize="20dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvRepetitions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Repeticiones:"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvNumRep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tvRepetitions"
                android:layout_alignParentRight="true"
                android:layout_marginRight="100dp"
                android:text="0"
                android:textSize="20dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/TV_AnguloX"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TV_AnguloX"
            android:textSize="20dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/TV_AnguloY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TV_AnguloY"
            android:textSize="20dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/TV_AnguloZ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TV_AnguloZ"
            android:textSize="20dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/D_TV_Bar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Progreso Actual"
            android:textSize="20dp" />

        <com.github.lzyzsd.circleprogress.DonutProgress
            android:id="@+id/D_PB_Bar1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="85dp" />

        <TextView
            android:id="@+id/D_TV_Bar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Progreso Global"
            android:textSize="20dp" />

        <com.github.lzyzsd.circleprogress.DonutProgress
            android:id="@+id/D_PB_Bar2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="5dp" />

    </LinearLayout>


</RelativeLayout>
